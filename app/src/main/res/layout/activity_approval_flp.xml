<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    tools:context=".history_flp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Forever Living Products Pvt. Ltd."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivhistory"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center_horizontal"
                android:src="@drawable/logos"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="32dp" />

            <TextView
                android:id="@+id/tvdetials"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:text="Forever Living Products Certificates List"
                android:textColor="#673AB7"
                android:textSize="24dp"
                android:textStyle="bold" />
            <MultiAutoCompleteTextView

                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:lineSpacingExtra="2dp"
                android:layout_height="match_parent"
                android:text=" * IASC â€“ International Aloe Science Council.\n
* Leaping Bunny | Respect for Animal  Rights.\n
* NSF Safety and Quality Certification.\n
* ISO 14001:2004 - Environmental Management Systems.\n
* ISO 9001:2000 Quality Management System.\n
* OHSAS 18001- Health And Safety Standard.\n
* Kosher organization.\n
* IDSA (The Indian Direct Selling Association).\n
(85% Aloe Vera And Bee Honey sold in all over world\n
World leader in Aloe Vera and Bee Hive)




" />

            <ImageView
                android:id="@+id/imidsa"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_marginLeft="2dp"

                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:gravity="center_horizontal"
                android:src="@drawable/idsa"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="32dp" />





        </LinearLayout>

    </ScrollView>

</LinearLayout>